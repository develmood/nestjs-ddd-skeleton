{
  "root": true,
  "ignorePatterns": ["**/*"],
  "plugins": ["@nrwl/nx"],
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@nrwl/nx/enforce-module-boundaries": [
          "error",
          {
            "enforceBuildableLibDependency": true,
            "allow": [],
            "depConstraints": [
              {
                "sourceTag": "type:app",
                "onlyDependsOnLibsWithTags": [
                  "type:app",
                  "type:application"
                ]
              },
              {
                "sourceTag": "type:application",
                "onlyDependsOnLibsWithTags": [
                  "type:application",
                  "type:domain",
                  "type:infrastructure",
                  "type:shared"
                ]
              },
              {
                "sourceTag": "type:domain",
                "onlyDependsOnLibsWithTags": [
                  "type:domain"
                ]
              },
              {
                "sourceTag": "type:infrastructure",
                "onlyDependsOnLibsWithTags": [
                  "type:domain",
                  "type:infrastructure"
                ]
              },
              {
                "sourceTag": "type:shared",
                "onlyDependsOnLibsWithTags": [
                  "type:shared"
                ]
              },
              {
                "sourceTag": "domain:onboarding",
                "onlyDependsOnLibsWithTags": [
                  "domain:onboarding"
                ]
              }
            ]
          }
        ]
      }
    },
    {
      "files": ["*.ts", "*.tsx"],
      "extends": ["plugin:@nrwl/nx/typescript"],
      "rules": {}
    },
    {
      "files": ["*.js", "*.jsx"],
      "extends": ["plugin:@nrwl/nx/javascript"],
      "rules": {}
    }
  ]
}
